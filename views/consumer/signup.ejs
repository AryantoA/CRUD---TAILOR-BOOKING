<% include ../partials/header %>
    <div class="container  ">
        <div class="col-sm-2 col-lg-4 col-md-4">
            <!--Form with header-->
            <div>
                <form action="/consumers/signup" method="POST">


                    <!--Header-->
                    <div class="form-header text-center">
                        <h3><i class="fa fa-lock"></i> Sign Up</h3>
                    </div>

                    <!--Body-->
                    <div class="md-form text-center">
                        <i class="fa fa-envelope prefix"></i>
                        <input type="text" id="form2" class="form-control" name="name">
                        <label for="form2">Your name</label>
                    </div>

                    <div class="md-form text-center">
                        <i class="fa fa-lock prefix"></i>
                        <input type="text" id="form2" class="form-control" name="location">
                        <label for="form2">Your location</label>
                    </div>
                    <div class="md-form text-center">
                        <i class="fa fa-envelope prefix"></i>
                        <input type="text" id="form2" class="form-control" name="email">
                        <label for="form2">Your email</label>
                    </div>

                    <div class="md-form text-center">
                        <i class="fa fa-lock prefix"></i>
                        <input type="number" id="form2" class="form-control" name="contactNumber">
                        <label for="form2">Your Contact Number</label>
                    </div>
                        <div class="md-form text-center">
                        <i class="fa fa-lock prefix"></i>
                        <input type="password" id="form2" class="form-control" name="password">
                        <label for="form2">Your Passwodd</label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-deep-purple" type="submit">Submit</button>
                    </div>



                    <!--Footer-->
                    <div class="modal-footer text-center">
                        <div class="options">
                            <p>Not a member? <a href="#">Sign Up</a></p>
                            <p>Forgot <a href="#">Password?</a></p>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
